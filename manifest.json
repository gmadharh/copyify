{
  "manifest_version": 3,
  "name": "Spotify Song Extractor",

  "version": "1.0",
  "description": "A simple Chrome extension written in TypeScript",
  "icons": {
    "128": "./src/assets/icon.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "host_permissions": [
    "http://open.spotify.com/track/*",
    "https://open.spotify.com/track/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://open.spotify.com/track/*",
        "https://open.spotify.com/track/*"
      ],
      "js": ["src/script.ts"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "webNavigation",
    "nativeMessaging"
  ]
}
