{
  "manifest_version": 3,
  "name": "Spotify Song Extractor",

  "version": "1.0",
  "description": "A simple Chrome extension written in TypeScript",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/script.ts"]
    }
  ],
  "permissions": ["scripting", "activeTab"]
}
